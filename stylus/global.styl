@import '/mixins/mixins'
@import '/mixins/sprite'

/*Переменные настройки*/
headerHeight = auto
footerHeight = 80px
placeholderColor = #000
containerWidth = 1170px

/*Цветовая палитра*/
$red = #F44336
$pink = #E91E63
$purple = #9C27B0
$dpurple = #673AB7
$indigo = #3F51B5
$blue = #2196F3
$lblue = #03A9F4
$cyan = #00BCD4
$teal = #009688
$green = #4CAF50
$lgreen = #8BC34A
$lime = #CDDC39
$yellow = #FFEB3B
$amber = #FFC107
$orange = #FF9800
$dorange = #FF5722
$brown = #795548
$grey = #9E9E9E
$bgrey = #607D8B
$black = #000000
$white = #ffffff




*
  box-sizing border-box
  inline-box-align align-content

/*Стилизация placeholder*/
input
  placeholder(#ffffff)

/*сброс стилей для списков*/
.unstyled-list
  margin 0
  padding 0
  list-style none

/*Скрытие текста*/
hide-text
  text-hide()
.t-center
  text-align center
.f-left
  float left
.f-right
  float right
/*иконки*/
.g-icon
  display block
  background url("../img/bg/sprite.png") no-repeat

.material-icons
  font-family 'Material Icons'
  font-weight normal
  font-style normal
  font-size 24px  /* Preferred icon size */
  display inline-block
  width 1em
  height 1em
  line-height 1
  text-transform none
  letter-spacing normal
  word-wrap normal
  /* Support for all WebKit browsers. */
  -webkit-font-smoothing antialiased
  /* Support for Safari and Chrome. */
  text-rendering optimizeLegibility
  /* Support for Firefox. */
  -moz-osx-font-smoothing grayscale
  /* Support for IE. */
  font-feature-settings 'liga'

/*Футер к низу страницы*/

.html
.body
  height 100%
  background-color #E8EAF6
  background rgb(238, 238, 238)
  color #656565
  font-size 20px
  font-family: 'Roboto Condensed', sans-serif;
.wrapper
  height auto !important
  height 100%
  min-height: 100%
  margin 40px auto - footerHeight
  padding:20px


#wrapper
  max-width 1400px
.footer-push
  height footerHeight

.footer
  padding 20px
  font-size 13px
.no-padding
  padding 0!important


.blk--red
  background-color $red
.blk--pink
  background-color $pink
.blk-purple
  background-color $purple
.blk--dpurple
  background-color $dpurple
.blk--grey
  background-color $grey
.blk--white
  background-color $white
.blk--black
  background-color $black

.md-icon-button
  padding 10px
  border 1px solid
  border-radius 50%
  overflow hidden
  color #000000
  font-size 20px
  line-height 0.8

.riple
  position: absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  opacity 0
  width 0
  height 0
  border-radius 50%
  background rgba(245, 156, 78, 1)


